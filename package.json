{
  "name": "solana-hooks",
  "version": "0.1.0",
  "description": "React hooks for development on Solana network",
  "author": "Marton Dobos",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.18.2",
    "@solana/web3.js": "^1.31.0",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "react": "^17.0.2",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
